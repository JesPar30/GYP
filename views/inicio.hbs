					<div class="form-group label-floating">
						<label class="control-label">ULTIMA FECHA DE CIERRE DE EJERCICIO</label>
						<input class="form-control" id="ult_cierre" type="text" name="ult_cierre" required
							data-error="Please enter your message subject">
						<div class="help-block with-errors"></div>
					</div>
					<!-- DNI DE SOCIO - REPRESENTANTE LEGAL - FIRMANTE -->
					<div class="form-group label-floating">
						<label class="control-label">DNI DE SOCIO - REPRESENTANTE LEGAL - FIRMANTE</label>
						<input class="form-control" id="DNI" type="number" name="DNI" required
							data-error="Please enter your message subject">
						<div class="help-block with-errors"></div>
					</div>

					<!-- NOMBRE DE SOCIO - REPRESENTANTE LEGAL - FIRMANTE -->
					<div class="form-group label-floating">
						<label class="control-label" for="name">NOMBRE DE SOCIO - REPRESENTANTE LEGAL - FIRMANTE</label>
